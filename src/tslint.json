{
    "extends": "../tslint.json",
    "linterOptions": {
      "exclude": [
        "node_modules/**"
      ]
    },
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "pilt",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "pilt",
            "kebab-case"
        ],
        "quotemark": [true, "single"],
        "indent": [true, "spaces", 2],
        "no-inferrable-types": [true, "ignore-params", "ignore-properties"]

    }
}
